<% include ./partials/header.ejs %>
<style>
.edy:hover{
  background-color: crimson;
  cursor: pointer;
}

</style>
  <div class="w-full min-h-screen bg-black text-white py-5">
      <div class="nav flex justify-between items-center px-4">
        <h3 class="text-lg"><i class="ri-arrow-left-s-line"></i><%= user.username %></h3>
        <div class="icons flex gap-5">
          <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
          <a href="/login"><i class="text-[1.4rem] ri-menu-line"></i></a>
        </div>
      </div>
      <div class="flex justify-between items-center p-4 mt-5">
        <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
          <img class="w-full h-full object-cover" src="<%= user.picture ? `/images/uploads/${user.picture}` : '/images/peopleimg.jpg' %>?v=<%= new Date().getTime() %>" alt="">
        </div>        
        <div class="stats flex gap-5 items-center justify-between">
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.posts.length %></h3>
            <h4>Posts</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.followers.length %></h3>
            <h4>Followers</h4>
          </div>
          <div class="flex flex-col items-center justify-center">
            <h3><%= user.following.length %></h3>
            <h4>Following</h4>
          </div>
        </div>
      </div>

      <div class="dets px-6 mt-5">
        <h3 class="text-lg text-white mb-1"><%= user.name %></h3>
        <p class="text-sm tracking-tight text-white opacity-95 w-[100%]">
          <% let bio = user.bio ? user.bio : "You have not set anything yet (click edit profile to set)"; %>
          <%= bio %>
        </p>
      </div>

      <div class="p-1 mt-3 flex items-center justify-center gap-2 font-semibold">
        <a class="edy p-2 py-1 px-9 bg-zinc-600 text-md rounded-md" href="/edit">Edit Profile</a>
        <a class="edy p-2 py-1 px-9 bg-zinc-600 text-md rounded-md" href="/edit">Share Profile</a>
        <a class="edy p-2 py-1 bg-zinc-600 text-md rounded-md" href="/edit"><i class="ri-user-add-line"></i></a>
      </div>

      <div class="mt-4 flex text-zinc-300 items-center justify-between gap-2 font-light">
        <a class="duration-110 hover:text-white hover:border-b-[1px] hover:border-white px-8 py-2 text-3xl"><i class="ri-grid-line"></i></a>
        <a class="duration-110 hover:text-white hover:border-b-[1px] hover:border-white px-8 py-2 text-3xl"><i class="ri-film-line"></i></a>
        <a class="duration-110 hover:text-white hover:border-b-[1px] hover:border-white px-8 py-2 text-3xl"><i class="ri-contacts-book-2-line"></i></a>
      </div>

      <div class="posts w-full flex gap-1 py-2 mt-5 flex-wrap">
        <% if(user.posts.length>0){ %>
          <% user.posts.reverse().forEach(function(post){ %>
            <div class="post w-[32.5%] h-32 bg-sky-100">
              <img class="w-full h-full object-cover" src="/images/uploads/<%= post.picture %>" alt="">
            </div>
          <% }) %>
        <% } else { %>
          <div class="w-full flex flex-col justify-center items-center min-h-[30vh]">
            
            <h1 class="font-medium text-white text-lg">Create Your First Post</h1>
            <small class="opacity-80 flex gap-1 items-center">
              <a href="/upload"><i class="text-[1.4rem] ri-add-box-line"></i></a>
              No posts yet.
            </small>
          </div>
        <% } %>
      </div>
  </div>
<% include ./partials/footer.ejs %>
