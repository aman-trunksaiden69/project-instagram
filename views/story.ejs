<% include ./partials/header.ejs %>

<div class="relative w-full min-h-screen bg-gradient-to-b from-[#DD1180] to-[#FF8C3A] text-white py-5">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold mb-5"><%= user.username %></h1>
    <h1 class="text-3xl font-bold mb-5"> hello</h1>
    <h6 class="text-xs opacity-30">
    </h6>

    <div class="posts parent mb-20">
      <% stories.reverse().forEach(function(story){ %>
        <div class="story mt-10 w-full min-h-[50vh]">
          <div class="relative w-full h-[100vh] mt-4 bg-sky-100 overflow-hidden">
            <img data-storyid="<%= story.id %>" class="storyimg w-full h-full object-cover"
              src="/images/uploads/<%= story.story %>" alt="">
          </div>
        </div>
        <% }) %>
    </div>
    
  </div>
</div>

<% include ./partials/footer.ejs %>
