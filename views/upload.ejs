<% include ./partials/header.ejs %>
<style>
  .see:hover{
    color: crimson;
    cursor: pointer;
  }
  .pos:hover{
    background-color: crimson;
    cursor: pointer;
  }
  .pro:hover{
    color: crimson;
    cursor: pointer;
  }
</style>
  <div class="w-full min-h-screen bg-black text-white py-5">
    <div class="flex justify-between items-center px-4">
      <a class="pro text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> profile</a>
      <h2 class="leading-none text-sm">Upload Post</h2>
      <a class="text-sm" href="/feed"><i class="ri-home-line"></i> home</a>
    </div>
    <div class="flex flex-col justify-center items-center gap-2 mt-44">
      <div class="image w-[30vw] h-[30vw] rounded-full border-2 border-zinc-800 flex items-center justify-center">
        <i class="text-5xl font-light ri-image-line"></i>
      </div>
      <button id="selectpic" class="see text-blue-500 text-lg capitalize">select picture</button>
    </div>
    
    <form id="uploadform" action="/Post" class="w-full px-6 py-3 mt-20" enctype="multipart/form-data" method="post">
        <input class="postinput" hidden name="category" type="radio" value="post" checked="true">
        <input id="imageinp" hidden type="file" name="image">
        <textarea name="caption" class="px-2 py-1 w-full bg-black border-2 h-20 border-zinc-800 resize-none rounded-md outline-none" placeholder="Write a caption..."></textarea>
        <input class="pos w-full px-2 py-2 bg-blue-500 rounded-md" type="submit" value="Upload Post">
    </form>
  </div>

  <script>
    document.querySelector("#selectpic")
    .addEventListener("click", function(){
        document.querySelector("#uploadform #imageinp").click();
    });
  </script>
